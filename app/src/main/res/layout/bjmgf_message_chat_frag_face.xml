<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/gf_150dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.view.ViewPager
        android:id="@+id/frag_pager_face"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gf_135dp"
        android:overScrollMode="never" />

    <RadioGroup
        android:id="@+id/frag_point"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gf_20dp"
        android:layout_marginBottom="@dimen/gf_6dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal" />

</LinearLayout>
